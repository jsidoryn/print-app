<h1>Create a new job</h1>
<%= simple_form_for @job do |f| %>
  <div class="inputs">
    <%- unless f.error_notification.blank? -%>
      <%= f.error_notification %>
    <%- end -%>
    <%= f.input :title %>
    <%= f.input :job_number %>
    <%= f.input :description %>
  </div>
  <div class="actions">
    <%= f.button :button, "Submit", class: "button" -%>
  </div>
<% end %>
