<h1><%= @job.title %> (<%= @job.job_number %>)</h1>

<p>
  <%= @job.description %>
</p>


<h2>Specifictions</h2>

<table class="table table__flush table__bordered">
  <% @specifications.each do |spec| %>
    <tr>
      <td><%= spec.title %> </td>
      <td><%= link_to "Delete", specification_path(spec), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Add a new spec", new_job_specification_path(@job), class: "button" %>
  <%= link_to "Back", jobs_path %>
</p>
